{
  "name": "goober",
  "version": "0.1.1",
  "description": "900B css-in-js solution",
  "main": "dist/goober.js",
  "umd:main": "dist/goober.umd.js",
  "source": "index.js",
  "files": [
    "index.js",
    "README.md",
    "dist",
    "package.json"
  ],
  "scripts": {
    "test": "npm run build && npm run size-check",
    "clean": "rm -rf dist",
    "size-check": "bundlesize",
    "build": "npm run clean && microbundle --entry src/index.js --output dist --name goober --sourcemap false --format cjs,umd && npm run size-check",
    "dev": "npm run clean && microbundle watch --entry src/index.js --output dist --name goober --sourcemap false --format cjs,umd",
    "deploy": "npm run build && npm publish"
  },
  "keywords": [
    "css-in-js",
    "goober",
    "styled",
    "emotion",
    "styled-components",
    "javascript",
    "react",
    "preact"
  ],
  "author": "Cristian <botecristian@yahoo.com>",
  "repository": "https://github.com/cristianbote/goober",
  "license": "ISC",
  "devDependencies": {
    "bundlesize": "^0.17.1",
    "microbundle": "^0.9.0"
  },
  "bundlesize": [
    {
      "path": "./dist/*.*",
      "maxSize": "900B"
    }
  ]
}
